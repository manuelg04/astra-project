model Brand {
  id        String   @id @default(cuid())
  name      String
  emoji     String?
  color     String?
  logoUrl   String?
  creatorId String
  creator   User     @relation(fields: [creatorId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  /// Relaci√≥n 1-N: una Brand posee varios SpaceGroups
  spaceGroups SpaceGroup[]

  @@index([createdAt])
  @@index([updatedAt])
  @@map("brands")
}
